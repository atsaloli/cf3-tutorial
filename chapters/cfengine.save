  vars:
      "webservers"
        slist => { "web01", "web02", "web03" };

}


bundle common global_classes {

  classes:

      "webfarm"
        expression => reglist(
                                "@(global_vars.webservers)",
                                 escape("$(sys.host)")
                             );

