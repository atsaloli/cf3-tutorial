      TO '$($(params)[DB_USER])'@localhost
      IDENTIFIED BY '$($(params)[DB_PASSWORD])';
      FLUSH PRIVILEGES;\"
"
        handle => "setup_db",
        comment => "Create DB, DB user, and access credentials";

