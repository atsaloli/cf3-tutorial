  vars:

      "shopping_list"

        slist   => {
                     "apples",
                     "bananas",
                     "grapes",
                     "plantains",
                     "coconuts",
        };

  reports:

      "buy $(shopping_list)";
}

```
\end{codelisting}
\begin{codelisting}
\codecaption{275-020-Lists-0270-example\_of\_implicit\_looping\_removing\_unwanted\_groups.cf}
