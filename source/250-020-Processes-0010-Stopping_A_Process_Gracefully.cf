# Shut down print services.
# To set up for this demo, run:
#
# yum install -y cups
# service cups start
# ps -ef | grep cupsd

bundle agent main {

  processes:

      "cupsd"

        handle => "shutdown_print_services",
        comment => "Shutdown print services on machines
                    that are not print servers",
        process_stop => "/sbin/service cups stop";

}
