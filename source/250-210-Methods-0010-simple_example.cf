body file control {
  inputs => {
    "$(sys.libdir)/stdlib.cf"
  };
}

bundle agent main {

  vars:
      "userlist" slist => { "alex", "ben", "charlie", "diana", "rob" };

  methods:
      "Remove Users"
        usebundle => remove_user("$(userlist)");

}

bundle agent remove_user(user) {

  commands:

      "/usr/sbin/userdel $(user)";

  files:
    any::
      "/var/spool/cron/$(user)"
        delete => tidy;

      "/var/mail/$(user)"
        delete => tidy;

}
