# What if there is other content in /etc/motd?
# You can control the entire file with
# delete_lines: "*"

bundle agent main
{

  files:
      "/etc/motd"
        handle => "motd",
        comment => "Create and populate motd",
        create => "true",
        edit_line => my_motd;
}


bundle edit_line my_motd
{
  insert_lines:
      "Good morning!";

  delete_lines:
      ".*";
}

