bundle agent main
{

  files:
      "/tmp/data.txt"
        handle    => "turn_dogs_into_cats",
        comment   => "Demonstrate search-and-replace in a file",
        edit_line => transform_dogs_to_cats;
}

bundle edit_line transform_dogs_to_cats {

  replace_patterns:
      "[Dd]og"
        replace_with => value("cat");
}

body replace_with value(x) {

        replace_value => "$(x)";
        occurrences => "all";
}
