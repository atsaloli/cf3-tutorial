# A body part can be re-used across promises

bundle agent main
{
  files:
      "/tmp/bobsfile"
        create  => "true",
        perms   => mog("777", "bob", "mail");

      "/tmp/susansfile"
        create  => "true",
        perms   => mog("000", "susan", "games");
}

body perms mog(mode,owner,group)
{
        mode    => "$(mode)";
        owners  =>  {"$(owner)"};
        groups  =>  {"$(group)"};
}
